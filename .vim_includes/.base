" tab
set showtabline=2
set shiftwidth=4
set tabstop=4
set softtabstop=2
set noexpandtab

" indent
set autoindent
set cindent

set backspace=indent,eol,start
set showmatch
set wildmenu
set mouse=a

" ruler, number
set number
set ruler
set cursorline
" folding
"set foldmethod=syntax

" search
set incsearch
set hlsearch
set ignorecase
set smartcase

" statusline
set laststatus=2
set showcmd
set statusline=%<%f\ %m%r%h%w%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l,%c%V%8P
set hid
